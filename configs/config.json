{
    "project": "HOPE-Generator",
    "run_id": "V00",

    "result_dir": "_RESULTS/",
    "train_filenames": "data/train.txt",
    "val_filenames": "data/valid.txt",
    "test_filenames": "data/test.txt",

    "load_model": "_RESULTS/models/baseline/model.pth",

    "tensorboard": true,
    "use_gpu": true,
    "n_gpu": 1,
    "gpu_idx": 0,
    "epochs": 1,
    "batch_size": 512,
    "log_every_iteration": 1,

    "model":{
        "available": ["MNISTModel"],
        "used": "MNISTModel",
        "baseline": {
            "hidden_size": 2048,
            "num_layers": 5
        }
    },

    "optimizer":{
        "available": ["SGD", "Adam", "AmsGrad"],
        "used": "Adam",
        "SGD": {
            "lr": 0.001,
            "weight_decay": 0.01
        },
        "Adam": {
            "lr": 0.001,
            "weight_decay": 0
        },
        "AmsGrad": {
            "lr": 1e-4,
            "weight_decay": 0.01
        }
    },

    "lr_scheduler": {
        "available": ["ExponentialLR", "MultiStepLR"],
        "used": "ExponentialLR",
        "ExponentialLR":{
            "decay": 0.96
        },
        "MultiStepLR":{
            "range": 12,
            "gamma": 0.96
        }
    }
}
